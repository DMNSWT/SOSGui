.toggle-switch
  sqs = 30px
  cursor pointer
  display inline-block
  text-align left
  overflow hidden
  line-height 8px
  min-width sqs*2
  &.disabled > div > span.knob
    background #777
  span
    cursor pointer
    display inline-block
    float left
    height sqs
    line-height sqs
    text-align center
    width 33%
    white-space nowrap
    font-size 10px
    text-transform uppercase
  > div
    position relative
    width 150%
  .knob
    box-shadow 0px 0px 2px rgba(0,0,0,0.5)
    background #777
    width 34%
    z-index 2
  .switch-on
    left -50%
  .switch-off
    left 0%
  .switch-left, .switch-right
    z-index 1
  .switch-left
    color #35404b
    background #979797
  .switch-right
    color text-light-gray
    background blue

.toggle-switch-animate
  transition left 0.3s
